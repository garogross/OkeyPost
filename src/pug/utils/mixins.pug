mixin icon(name,mod)
    if(mod)
        svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
            use(xlink:href="img/icons/icons.svg#" + name)
    else
        svg(class="svg-sprite-icon icon-" + name)
            use(xlink:href="img/icons/icons.svg#" + name)
mixin image(cl,name,title)
    if(title)
        img(class="" + cl src="img/" + name title="" + title)
    else
        img(class="" + cl src="img/" + name title="image")